<section>
<table class="ui table" id="bmiTab">
  <thead>
    <tr>
      <th>Weight</th>
      <th>BMI</th>
    </tr>
  </thead>
  <tbody>
    {{#each assessmentlist.assessments}}
      <tr>
        <td>
            <script>
                if (({{weight}}) > 100)
                {
                  let bmi = "<i class=""fa fa-heartbeat""; style=""color: #ff3300""> </i>"
                    document.getElementById("bmi").innerHTML = bmi
                }
                else
                {
                    document.getElementById("bmi").innerHTML = "Not Obese"
                }
            </script>
            <p id="bmi"> 
              <i class="fa fa-heartbeat"; style="color: #00dc04"> </i> 
            </p>
        </td>
            <td>BMI</td>
      </tr>

    {{/each}}
  </tbody>
</table>
</section>


